<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        # Console appender
        <Console name="stdout" target="SYSTEM_OUT">
            # Pattern of log message for console appender
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%c.%M:%L] %p %m%n"/>
        </Console>        
    </Appenders>

    <Loggers>
        # Override log level for specified package
        <Logger name="com.shadesframework.synthetic.DataGenHelper" level="INFO"/>
        <Logger name="enrichLogger" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.MetaDataHelper" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.Synthetic" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.DataSet" level="INFO"/>
        <Logger name="generateRowLogger" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.CommonHelper" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.FileMetadata" level="INFO"/>
        <Logger name="com.shadesframework.synthetic.DbFileStorage" level="INFO"/>
        <Logger name="dateGenlogger" level="INFO"/>
        <Logger name="rotateLogger" level="INFO"/>
        <Logger name="numberLogger" level="INFO"/>
        <Logger name="expressionEvalLogger" level="INFO"/>
        <Logger name="repeatForColumnsLogger" level="INFO"/>
              

        <Root level="DEBUG">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>